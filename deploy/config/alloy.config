
// Alloy Configuration

// 1. Receivers
// Receive OTLP traces, metrics, logs
otelcol.receiver.otlp "default" {
  grpc {
    endpoint = "0.0.0.0:4317"
  }
  http {
    endpoint = "0.0.0.0:4318"
  }

  output {
    metrics = [otelcol.processor.batch.default.input]
    logs    = [otelcol.processor.batch.default.input]
    traces  = [otelcol.processor.batch.default.input]
  }
}

// 2. Processors
otelcol.processor.batch "default" {
  timeout = "1s"

  output {
    metrics = [otelcol.exporter.prometheus.default.input]
    logs    = [otelcol.exporter.loki.default.input]
    traces  = [otelcol.exporter.otlp.tempo.input]
  }
}

// 3. Exporters

// Metrics -> Mimir (via Prometheus Remote Write)
otelcol.exporter.prometheus "default" {
  forward_to = [prometheus.remote_write.local.receiver]
}

prometheus.remote_write "local" {
  endpoint {
    url = "http://prometheus:9090/api/v1/write"
  }
}

// Logs -> Loki
otelcol.exporter.loki "default" {
  forward_to = [loki.write.default.receiver]
}

loki.write "default" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

// Traces -> Tempo
otelcol.exporter.otlp "tempo" {
  client {
    endpoint = "tempo:4317"
    tls {
      insecure = true
    }
  }
}


// 4. Host Metrics (CPU/RAM of the machine)
prometheus.exporter.unix "default" {
}

prometheus.scrape "host" {
  targets    = prometheus.exporter.unix.default.targets
  forward_to = [prometheus.remote_write.local.receiver]
}

// 5. Container Metrics (via cAdvisor)
prometheus.scrape "cadvisor" {
  targets = [
    { "__address__" = "cadvisor:8080" },
  ]
  forward_to = [prometheus.remote_write.local.receiver]
}

// 6a. Plugin Metrics (Grafana Image Renderer)
prometheus.scrape "renderer" {
  targets = [
    { "__address__" = "renderer:8081", "job" = "image-renderer" },
  ]
  metrics_path = "/metrics"
  forward_to   = [prometheus.remote_write.local.receiver]
}

// 6b. Watermill Metrics
prometheus.scrape "watermill" {
  targets = [
    { "__address__" = "gateway-service:9091", "service_name" = "gateway-service" },
    { "__address__" = "post-service:9091",    "service_name" = "post-service" },
    { "__address__" = "auth-service:9091",    "service_name" = "auth-service" },
    { "__address__" = "messaging-service:9091", "service_name" = "messaging-service" },
    { "__address__" = "social-service:9091", "service_name" = "social-service" },
    { "__address__" = "notification-service:9091", "service_name" = "notification-service" },
  ]
  metrics_path = "/metrics"
  forward_to   = [prometheus.remote_write.local.receiver]
}

